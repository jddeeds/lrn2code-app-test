<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col m3">
        <div class="collection">
            <% @lessons.each do |lesson| %>
            <%= link_to lesson.title, lesson, :class => 'collection-item' %>
            <% end %>
        </div>
    </div>
    <div class="col m9">
        <div class="card blue-grey darken-1">

            <div class="card-image">
                <div class="videoWrapper">
                    <!-- Copy & Pasted from YouTube -->
                    <iframe width="560" height="349" src="https://www.youtube.com/embed/<%= @lesson.language %>" frameborder="0" allowfullscreen></iframe>
                </div>

            </div>

            <div class="card-content white-text">
                <span class="card-title"><%= @lesson.title %></span>
                <p><%= @lesson.description%></p>
            </div>
            <div class="card-action">
                <%= link_to "Previous", @prev_lesson if !@prev_lesson.nil? %>
                <span class="right">
                    <%= link_to "Next", @next_lesson if !@next_lesson.nil? %>
                </span>
            </div>
        </div>
    </div>
</div>
